@using Scheduler.ViewModels;
@model CreateTaskViewModel;

<h1>Create New Task</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <textarea id="description" name="description" rows="4" cols="50" placeholder="Enter description here..."
            class="form-control" asp-for="Description">
    </textarea>
    </div>

    <div class="mt-3">
        <label class="form-label">Due Date</label>
        <input type="date" class="form-control" asp-for="DueDate" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">+ Create</button>
    </div>
</form>